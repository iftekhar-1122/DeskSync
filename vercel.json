{
  "buildCommand": "pnpm -w run vercel-build",
  "installCommand": "pnpm install",
  "outputDirectory": "apps/web/.next",
  "framework": "nextjs",
  "functions": {
    "apps/api/src/index-simple.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SKIP_ENV_VALIDATION": "1",
    "DATABASE_URL": "postgresql://dummy:dummy@localhost:5432/dummy"
  }
}

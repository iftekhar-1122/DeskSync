# Vercel Environment Variables Configuration
# Copy these to your Vercel dashboard under Settings > Environment Variables

# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/database?schema=public"

# NextAuth.js Configuration
NEXTAUTH_URL="https://your-vercel-domain.vercel.app"
NEXTAUTH_SECRET="your-32-character-secret-key-here-change-this"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here-change-this"

# API Configuration
API_BASE_URL="https://your-vercel-domain.vercel.app/api"
API_PORT="3001"

# Redis Configuration (Optional - for production queue processing)
REDIS_URL="redis://default:password@host:port"

# Slack Integration (Optional)
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_SIGNING_SECRET="your-slack-signing-secret"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="1000"

# Logging
LOG_LEVEL="info"

# Environment
NODE_ENV="production"

# Vercel-specific
VERCEL="1"
VERCEL_ENV="production"
